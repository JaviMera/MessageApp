<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginLeft="@dimen/inbox_horizontal_margin"
    android:layout_marginRight="@dimen/inbox_horizontal_margin"
    android:layout_marginTop="@dimen/inbox_vertical_margin"
    android:background="@android:color/white">

    <TextView
        android:id="@+id/usernameLabel"
        tools:text="Javier99"
        style="@style/UsernameMessage" />

    <TextView
        android:id="@+id/timeLabel"
        style="@style/TimeMessage"
        tools:text="a month ago" />

    <TextView
        android:id="@+id/messageTypeText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Picture"
        android:layout_below="@+id/usernameLabel"
        android:textSize="14sp"
        android:textColor="@color/light_gray"
        android:paddingStart="10dp"
        android:paddingBottom="10dp"/>

</RelativeLayout>